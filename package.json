{
  "name": "payment-driver",
  "version": "1.0.0",
  "description": "Serverless payment request micro service.",
  "main": "payment-requests.js",
  "dependencies": {
    "aws-sdk": "^2.224.1",
    "bignumber.js": "^6.0.0",
    "bootstrap-validator": "^0.11.9",
    "dotenv": "^5.0.1",
    "jsonwebtoken": "^8.2.1",
    "jwk-to-pem": "^2.0.0",
    "lodash": "^4.17.5",
    "moment": "^2.22.1",
    "mustache": "^2.3.0",
    "querystring": "^0.2.0",
    "request": "^2.85.0",
    "request-promise": "^4.2.2",
    "request-promise-native": "^1.0.5",
    "stripe": "^5.8.0",
    "uuid": "3.2.1"
  },
  "devDependencies": {
    "aws-sdk-mock": "^1.7.0",
    "chai": "^4.1.2",
    "chai-jq": "0.0.9",
    "cheerio": "^1.0.0-rc.2",
    "coveralls": "^3.0.0",
    "documentation": "^6.3.1",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nock": "^9.1.6",
    "node-http-server": "^8.1.2",
    "nyc": "^11.2.1",
    "sinon": "^6.1.5",
    "watch-run": "^1.2.5"
  },
  "scripts": {
    "postinstall": "cp node_modules/bootstrap-validator/dist/validator.min.js public/assets/js",
    "create-tables": "aws dynamodb create-table --endpoint-url http://localhost:8000 --table-name payment_requests --attribute-definitions AttributeName=id,AttributeType=S --key-schema AttributeName=id,KeyType=HASH --provisioned-throughput ReadCapacityUnits=1,WriteCapacityUnits=1",
    "delete-tables": "aws dynamodb delete-table --endpoint-url http://localhost:8000 --table-name payment_requests",
    "test": "PAYMENT_REQUESTS_TABLE_NAME=payment_requests ./node_modules/.bin/nyc ./node_modules/mocha/bin/mocha",
    "test-watch": "PAYMENT_REQUESTS_TABLE_NAME=payment_requests ./node_modules/mocha/bin/mocha -R min --watch --watch-extensions yml,csv",
    "coverage": "PAYMENT_REQUESTS_TABLE_NAME=payment_requests ./node_modules/.bin/nyc npm test && ./node_modules/.bin/nyc report --reporter=text-lcov | ./node_modules/coveralls/bin/coveralls.js -v",
    "assets": "node-http-server root=public port=8081 verbose=true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VenueDriver/payment-driver.git"
  },
  "author": "Ryan Alyn Porter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VenueDriver/payment-driver/issues"
  },
  "homepage": "https://github.com/VenueDriver/payment-driver#readme"
}
